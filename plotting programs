 # Plotting a circle
 from sympy import plot_implicit, symbols, Eq
 x, y = symbols('x y')
 p1=plot_implicit(Eq(x**2+y**2, 8),(x,-4,4),(y,-4,4),title= 'Circle: $x^2+y^2

 # Plot cardioid r=3(1+cos theta)
 from pylab import *
 theta = linspace (0 , 2*np .pi , 1000 )
 r1=3+3*cos (theta )
 polar ( theta , r1, 'r')
 show()

 # PLot cardioid r=3(1-cos theta)
 from pylab import *
 theta = linspace (0, 2*np .pi , 1000)
 r1=3-3*cos(theta)
 polar(theta , r1 , 'r')
 show()
 
 # Plot cardioid r^2=(1-cos theta)
 from pylab import *
 theta = linspace (0, 2*np .pi, 1000 )
 r1=sqrt(1-cos(theta))
 polar(theta, r1, 'r')
 show()

 # Plot cardioid 2*r=(1-cos theta)
 from pylab import *
 theta = linspace(0, 2*np.pi ,1000)
 r1=(1-cos (theta))/2
 polar (theta, r1 , 'r')
 show()
 
