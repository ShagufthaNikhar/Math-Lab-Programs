# Plotting sine and cosine curves
 %matplotlib inline
 import matplotlib.pyplot as plt
 import numpy as np
 fig = plt.figure()
 ax = plt.axes()
 x = np.linspace(5, 20,100)
 plt.plot(x, np.sin(x),'k-*')
 plt.plot(x, np.cos(x),'r--*');

 # Plotting a line(Line plot)
 import numpy as np
 import matplotlib . pyplot as plt
 x=[1 ,2 ,3 ,4 ,6 ,7 ,8]
 y=[2 ,7 ,9 ,1 ,5 ,10 ,3]
 plt . plot (x , y ,'r--.')
 plt . xlabel ('x - axis ')
 plt . xlabel ('y - axis ')
 plt . title ('My first graph |')
 plt . show()
 
